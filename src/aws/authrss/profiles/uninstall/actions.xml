<?xml version="1.0" encoding="utf-8"?>
<object xmlns:i18n="http://xml.zope.org/namespaces/i18n"
        name="portal_actions"
>
  <object name="document_actions">
    <!-- Remove RSS Action which is registered by this Package -->
    <object meta_type="CMF Action"
            name="rss"
            remove="True"
            i18n:domain="plone"
    />

    <!-- Add the Plone Default RSS Action -->
    <object meta_type="CMF Action"
            name="rss"
            i18n:domain="plone"
    >
      <property name="title"
                i18n:translate=""
      >RSS feed</property>
      <property name="description"
                i18n:translate=""
      />
      <property name="url_expr">object/@@syndication-util/rss_url</property>
      <property name="icon_expr">string:plone-rss</property>
      <property name="available_expr">object/@@syndication-util/context_enabled</property>
      <property name="permissions">
        <element value="View" />
      </property>
      <property name="visible">True</property>
    </object>
  </object>

  <object name="user">
    <!-- User Action RSS Token -->
    <object insert-before="logout"
            meta_type="CMF Action"
            name="rss_token"
            remove="True"
            i18n:domain="aws.authrss"
    />
  </object>

</object>
